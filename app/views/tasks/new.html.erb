<div class="container">
  <div class="maform">
    <%= form_for @task do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class="form-group">
      <%= f.label :details %>
      <%= f.text_field :details %>
    </div>
    <div class="form-group">
      <%= f.label "Completed" %> <br />
      <%= f.check_box :completed, {}, true, false %> <br />
    </div>
    <%= f.submit %>
    <% end %>
  </div>
  <div>
    <%= link_to "Back to the list", tasks_path  %>
  </div>
</div>
