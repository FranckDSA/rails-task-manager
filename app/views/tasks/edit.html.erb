<div class="container">
  <div>
    <h1>Edit : <%= @task.title %></h1>
  </div>
  <div class="maform">
    <%= form_for @task do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class="form-group">
      <%= f.label :details %>
      <%= f.text_field :details %>
    </div>
    <div class="form-group">
      <%= f.label "Completed" %>
      <%= f.check_box :completed %>
    </div>
    <%= f.submit %>
    <% end %>
  </div>
</div>
